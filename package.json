{
  "name": "video-transcribe",
  "version": "1.0.0",
  "description": "Multi-package TypeScript agent for transcribing MP4 files using Azure AI services",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:core": "npm run build -w packages/core",
    "build:cli": "npm run build -w packages/cli",
    "build:server": "npm run build -w packages/server",
    "clean": "npm run clean --workspaces",
    "clean:core": "npm run clean -w packages/core",
    "clean:cli": "npm run clean -w packages/cli",
    "clean:server": "npm run clean -w packages/server",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "dev:cli": "npm run dev -w packages/cli",
    "dev:server": "npm run dev -w packages/server",
    "start:server": "npm run start -w packages/server",
    "version:patch": "npm version patch --no-git-tag-version --workspaces",
    "version:minor": "npm version minor --no-git-tag-version --workspaces",
    "version:major": "npm version major --no-git-tag-version --workspaces"
  },
  "keywords": [
    "typescript",
    "azure",
    "transcription",
    "mp4",
    "ai",
    "monorepo"
  ],
  "author": "Andy Cohen",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}