{
  "name": "video-transcribe-agent",
  "version": "1.0.0",
  "description": "TypeScript agent for transcribing MP4 files using Azure AI services",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo \"No tests yet - TODO: Add unit tests\"",
    "test-agent": "node test-agent.js",
    "api-server": "node dist/src/api-server-stateless.js",
    "autonomous": "node examples/autonomous-agent.js",
    "version:check": "node -e \"console.log('Current version:', require('./package.json').version)\"",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version"
  },
  "keywords": [
    "typescript",
    "azure",
    "transcription",
    "mp4",
    "ai"
  ],
  "author": "Andy Cohen",
  "license": "MIT",
  "dependencies": {
    "@azure/ai-projects": "^1.0.0-beta.2",
    "@azure/core-auth": "^1.5.0",
    "@azure/core-client": "^1.7.3",
    "@azure/logger": "^1.0.4",
    "@azure/openai": "^2.0.0",
    "@types/cors": "^2.8.19",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.40.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.21.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/ffprobe-static": "^2.0.3",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.6",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.7",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
