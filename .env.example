# Environment Variables Template
# Copy this to .env or set these environment variables in your deployment

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_ACCOUNT_NAME=your-azure-account-name
AZURE_API_KEY=your-azure-api-key

# Azure Service Endpoints
AZURE_AI_FOUNDRY_ENDPOINT=https://your-resource.services.ai.azure.com/api/projects/your-project
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_AI_SERVICES_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_SPEECH_TO_TEXT_ENDPOINT=https://eastus2.stt.speech.microsoft.com
AZURE_TEXT_TO_SPEECH_ENDPOINT=https://eastus2.tts.speech.microsoft.com

# Model Configuration
GPT_TRANSCRIBE_MODEL=gpt-4o-transcribe
GPT_AUDIO_MODEL=gpt-4o-text

# Application Configuration
LOG_LEVEL=info
TEMP_DIR=./temp
OUTPUT_DIR=./output

# API Security
API_KEY=your-secure-api-key-here

# Deployment Configuration
LOCATION=eastus2
CONTAINER_APP_NAME=video-transcribe-api
ENVIRONMENT_NAME=transcribe-env
IDENTITY_NAME=transcribe-identity
ACR_NAME=your-acr-name

WHISPER_SUPPRESS_WARNINGS=true

PORT=3000
NODE_ENV=development