{
  "name": "@video-transcribe/core",
  "version": "1.0.0",
  "description": "Core video transcription library with Azure AI services",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./agent": {
      "types": "./dist/agent/transcription-agent.d.ts",
      "default": "./dist/agent/transcription-agent.js"
    },
    "./atomic": {
      "types": "./dist/services/index.d.ts", 
      "default": "./dist/services/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "echo \"No tests yet - TODO: Add unit tests\""
  },
  "keywords": [
    "typescript",
    "azure",
    "transcription",
    "mp4",
    "ai",
    "library"
  ],
  "author": "Andy Cohen",
  "license": "MIT",
  "dependencies": {
    "@azure/ai-projects": "^1.0.0-beta.2",
    "@azure/core-auth": "^1.5.0",
    "@azure/core-client": "^1.7.3",
    "@azure/logger": "^1.0.4",
    "@azure/openai": "^2.0.0",
    "dotenv": "^16.6.1",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.40.0",
    "openai": "^5.21.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.8.7",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.52.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ]
}
